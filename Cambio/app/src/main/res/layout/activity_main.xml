<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francine.cambio.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Conversor de Moeda"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Valor em Real"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp" />

    <EditText
        android:id="@+id/real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:id="@+id/Dolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:onClick="converte"
        android:text="Converter para DÃ³lar"
        android:layout_below="@+id/real"
        android:layout_alignStart="@+id/real" />

    <Button
        android:id="@+id/Euro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="converte"
        android:text="Converter para Euro"
        android:layout_below="@+id/Dolar"
        android:layout_alignStart="@+id/Dolar" />

    <Button
        android:id="@+id/Libra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="converte"
        android:text="Converter para Libra"
        android:layout_below="@+id/Euro"
        android:layout_alignStart="@+id/Euro" />

    <Button
        android:id="@+id/Peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="converte"
        android:text="Converter para Peso"
        android:layout_below="@+id/Libra"
        android:layout_alignStart="@+id/Libra" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Peso"
        android:layout_below="@+id/Peso"
        android:layout_marginTop="49dp"
        android:textAppearance="@android:style/TextAppearance.Large" />

</RelativeLayout>
