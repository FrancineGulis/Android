<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francine.churrascometro.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:text="Informe a quantidade de homens:" />

    <SeekBar
        android:id="@+id/seekBarMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="11dp"
        android:max="30"
        android:progress="1"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBarMan"
        android:layout_below="@+id/seekBarMan"
        android:layout_marginTop="15dp"
        android:text="Informe a quantidade de mulheres:" />

    <SeekBar
        android:id="@+id/seekBarWoman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="14dp"
        android:max="30"
        android:progress="1"
        android:layout_alignEnd="@+id/seekBarMan" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBarWoman"
        android:layout_below="@+id/seekBarWoman"
        android:layout_marginTop="12dp"
        android:text="Informe a quantidade de crianças:" />

    <SeekBar
        android:id="@+id/seekBarKid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/seekBarWoman"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="13dp"
        android:max="30"
        android:progress="1" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="Linguiça: "
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_below="@+id/seekBarKid"
        android:layout_alignStart="@+id/seekBarKid" />

    <TextView
        android:id="@+id/ling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/TextView"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TextView"
        android:layout_below="@+id/TextView"
        android:layout_marginTop="17dp"
        android:text="Carne:"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/carne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView5"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/tvMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBarMan"
        android:layout_toEndOf="@+id/seekBarMan" />

    <TextView
        android:id="@+id/tvWoman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBarWoman"
        android:layout_toEndOf="@+id/seekBarWoman" />

    <TextView
        android:id="@+id/tvKid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBarKid"
        android:layout_toEndOf="@+id/seekBarKid" />
</android.widget.RelativeLayout>
