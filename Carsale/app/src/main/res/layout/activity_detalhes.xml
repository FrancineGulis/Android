<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francine.carsale.Detalhes">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="33dp" />

    <TextView
        android:id="@+id/modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="22dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modelo"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Fabricante:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx1"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Ano:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/tx3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx2"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Cor:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/tx4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx3"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="PreÃ§o"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/fabricante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tx1"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tx1"
        android:fontFamily="sans-serif-smallcaps"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fabricante"
        android:layout_alignTop="@+id/tx2"
        android:fontFamily="sans-serif-smallcaps"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/cor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ano"
        android:layout_alignTop="@+id/tx3"
        android:fontFamily="sans-serif-smallcaps"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <TextView
        android:id="@+id/preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tx4"
        android:layout_alignBottom="@+id/tx4"
        android:layout_alignStart="@+id/cor"
        android:fontFamily="sans-serif-smallcaps"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#081a00" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:background="#0f3300"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="comprar"
        android:text="COMPRAR"
        android:textColor="#70ff33"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
