<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francine.tempclient2.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Conversor de Temperatura"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="36dp"
        android:text="Temperatura"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="number"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input"
        android:layout_below="@+id/input"
        android:layout_marginTop="18dp"
        android:text="Resultado"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="number"
        android:layout_alignEnd="@+id/input" />

    <Button
        android:id="@+id/coverterC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/output"
        android:layout_alignStart="@+id/output"
        android:layout_below="@+id/output"
        android:layout_marginTop="28dp"
        android:onClick="calc"
        android:text="Converter  ppara Celsius" />

    <Button
        android:id="@+id/converterF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/coverterC"
        android:layout_alignStart="@+id/coverterC"
        android:layout_below="@+id/coverterC"
        android:layout_marginTop="12dp"
        android:onClick="calc"
        android:text="Converter para Fahrenheit" />
</RelativeLayout>