<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francine.oscarapp.LoginActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="36dp"
        android:fontFamily="fantasy"
        android:text="Faça seu Login"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="118dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usuario"
        android:layout_below="@+id/usuario"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/usuario"
        android:layout_alignStart="@+id/usuario"
        android:layout_marginBottom="45dp"
        android:fontFamily="fantasy"
        android:text="Usuário"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/senha"
        android:layout_below="@+id/usuario"
        android:layout_marginTop="43dp"
        android:text="Senha"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        android:id="@+id/btlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/senha"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/senha"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:fontFamily="tahoma"
        android:text="Login"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/menssagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="33dp"
        android:textColor="@android:color/holo_red_dark" />
</RelativeLayout>
