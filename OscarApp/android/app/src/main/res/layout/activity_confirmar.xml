<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francine.oscarapp.ConfirmarActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="23dp"
        android:layout_toStartOf="@+id/dvotado"
        android:fontFamily="fantasy"
        android:text="Filme votado: "
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="28dp"
        android:fontFamily="fantasy"
        android:text="Diretor votado:"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="142dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="fantasy"
        android:onClick="confirmar"
        android:text="Confirmar" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:fontFamily="fantasy"
        android:text="Confirmar Voto"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/fvotado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView6"
        android:fontFamily="fantasy"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/diretor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:fontFamily="fantasy"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/diretor"
        android:layout_marginTop="30dp"
        android:fontFamily="fantasy"
        android:onClick="mudarVotoFilme"
        android:text="Mudar voto Filme" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button3"
        android:fontFamily="fantasy"
        android:onClick="mudarVotoDiretor"
        android:text="Mudar voto diretor" />

    <TextView
        android:id="@+id/menssagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp" />

</RelativeLayout>
